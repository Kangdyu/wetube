mixin videoPlayer(video = {})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.src}`)
    .videoPlayer__controls
      .videoPlayer__column
        div.control-element.videoPlayer__btn#jsPlayButton
          i.fas.fa-play
        div.control-element.videoPlayer__btn#jsVolumeButton
          i.fas.fa-volume-up
        div.control-element
          input#jsVolumeBar(type="range", min=0, max=1, step=0.1, value=0.5)
        div.control-element
          span#jsCurrentTime 00:00:00 
          | /
          span#jsTotalTime 00:00:00
      .videoPlayer__column
        div.control-element.videoPlayer__btn#jsFullScreenButton
          i.fas.fa-expand
